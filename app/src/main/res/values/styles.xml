<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    </style>


    <style name="Lock_TextView" >
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <style name="FeedBack_Theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textCursorDrawable">@color/theme_text_primary</item>
    </style>

    <style name="Navigation_Drawer_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:tag">bookings</item>
        <item name="android:textColor">@color/theme_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/background_drawer</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/theme_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider_Light">
        <item name="android:background">@color/theme_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="Preference_Text_Title">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/theme_text_secondary</item>
    </style>

    <style name="Preference_Text_Content">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Preference_Text_Layout">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
