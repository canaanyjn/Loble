    <TextView
        android:text="@string/preference_other_setting_title"
        style="@style/Preference_Text_Title"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/fragment_prefer_feedback"
        style="@style/Preference_Text_Layout"
        android:text="@string/feedback"
        />

    <TextView
        android:id="@+id/fragment_prefer_update"
        style="@style/Preference_Text_Layout"
        android:text="@string/update_check"
        />

    <TextView
        android:id="@+id/fragment_prefer_rating"
        style="@style/Preference_Text_Layout"
        android:text="@string/rating"
        />

</LinearLayout>
