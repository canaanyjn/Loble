<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/pin_layout_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/pin_layout_line2"
        >

            <Button
                android:id="@+id/pin_button_1"
                style="@style/Pin_Button"
                android:text="1"
                />

        <Button
            android:id="@+id/pin_button_2"
            style="@style/Pin_Button"
            android:text="2"
            />

        <Button
            android:id="@+id/pin_button_3"
            style="@style/Pin_Button"
            android:text="3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_layout_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pin_layout_line3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        >

        <Button
            android:id="@+id/pin_button_4"
            style="@style/Pin_Button"
            android:text="4"
            />

        <Button
            android:id="@+id/pin_button_5"
            style="@style/Pin_Button"
            android:text="5"
            />

        <Button
            android:id="@+id/pin_button_6"
            style="@style/Pin_Button"
            android:text="6"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_layout_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/pin_button_7"
            style="@style/Pin_Button"
            android:text="7"
            />

        <Button
            android:id="@+id/pin_button_8"
            style="@style/Pin_Button"
            android:text="8"
            />

        <Button
            android:id="@+id/pin_button_9"
            style="@style/Pin_Button"
            android:text="9"
            />

    </LinearLayout>

</RelativeLayout>