<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/at_lock_scroll"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/at_lock_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Lock_TextView"
            />

    </ScrollView>

    <TextView
        android:id="@+id/at_lock_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/at_lock_address_tv"
        android:layout_alignEnd="@id/at_lock_address_tv"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/at_lock_scroll"
        android:text="你好"
        style="@style/Lock_TextView"
    />

</RelativeLayout>