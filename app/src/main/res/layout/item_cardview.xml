<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/theme_background_secondary"
        android:elevation="5dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/verse_list_card_view_left_yin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="“"
            android:textColor="@color/theme_text_secondary"
            android:textSize="30sp"
            />

        <RelativeLayout
            android:id="@+id/verse_list_card_view_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_toRightOf="@id/verse_list_card_view_left_yin"
            android:layout_below="@id/verse_list_card_view_left_yin"
            >

            <TextView
                android:id="@+id/verse_list_card_view_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasd"
                android:textColor="@color/theme_text_secondary"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/verse_list_card_view_title"
                android:layout_below="@id/verse_list_card_view_content"
                android:text="——"
                android:textSize="14sp"
                android:textColor="@color/theme_text_secondary"
                />

            <TextView
                android:id="@+id/verse_list_card_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_alignRight="@id/verse_list_card_view_content"
                android:layout_below="@id/verse_list_card_view_content"
                android:text="asdasd"
                android:textColor="@color/theme_text_secondary"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/verse_list_card_view_right_yin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/verse_list_card_view_title_layout"
            android:layout_below="@id/verse_list_card_view_title_layout"
            android:text="”"
            android:textColor="@color/theme_text_secondary"
            android:textSize="30sp"
            android:minHeight="0dp"
            />

        <TextView
            android:id="@+id/verse_list_card_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2015.3.1"
            android:textSize="14sp"
            android:textColor="@color/theme_text_secondary"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
